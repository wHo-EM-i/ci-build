#!/bin/bash
# Lets see machine specifications and environments
df -h
free -h

. /tmp/ci/function

install_apt

check_build_type
case "$build_type" in
		 V)
		 tg "Build Started! | Type : $build_type
Status: $progress"
		 ;; # else
		 *)
		 tg "Started New Build as Rom isn't Compiled
Type : $build_type | Status: $progress"
esac

cd /tmp # Where to download cccahe

echo "• Downloading CCACHE •"
down https://nexusproject.ehteshammalik4.workers.dev/0:/$CIRRUS_REPO_OWNER/$device_codename/$rom_name/$branch_name/ccache.tar.gz || down https://nexusproject.ehteshammalik4.workers.dev/0:/$CIRRUS_REPO_OWNER/$device_codename/$rom_name/$branch_name/ccache.tar.gz
if [ -e *.tar.gz ]; then
tg "Cache was Downloaded Successfully!
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"
else
tg "Skipping CCACHE Download on 1st build..!"
fi

# Extract ccache so ci can use it
echo "• Extracting CCACHE •"
if [ -e *.tar.gz ]; then
time tar xf *.tar.gz
fi

# Remove unnecessary downloaded file
rm -rf *.tar.gz

# fix
echo "" > /etc/mtab

# Start new build if system img compiled
case "$build_type" in
		 S|s)
		 echo "• build Type is System | Started loop•"
		 sleep 80m # start loop after 80mins
		 ;; # else
		 *) # skip the script
		 echo "• Build Type is not System | Skipped Script •"
		 exit 1
esac
while true; do
if [ -e /tmp/rom/out/target/product/$device_codename/system.img ]; then
echo "R" > /tmp/build_type.txt
bash /tmp/ci/upload_ccache
else
sleep 5m
fi
done&
